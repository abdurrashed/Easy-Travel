@model EasyTravel.Domain.Entites.Bus

@{
    ViewData["Title"] = "Delete Bus";
}

<div class="card shadow-sm" style="max-width: 600px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <form method="post" asp-area="Admin" asp-controller="Bus"  asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <partial name="_BusForm" /> <!-- Use <partial> tag helper here -->
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete Bus</button>
            <a  asp-area="Admin" asp-controller="Bus" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
