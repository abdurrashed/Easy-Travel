@model EasyTravel.Domain.Entites.Car

@{
    ViewData["Title"] = "_CarForm";
}


<div class="form-group">
    <label for="OperatorName" style="width:100%">
        Bus Operator Name
        <input asp-for="OperatorName" class="form-control" required />
    </label>
    <span asp-validation-for="OperatorName" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="CarType" style="width:100%">
        Car Type
        <input asp-for="CarType" class="form-control" />
    </label>
    <span asp-validation-for="CarType" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="From" style="width:100%">
        From (Starting Point)
        <input asp-for="From" class="form-control" required />
    </label>
    <span asp-validation-for="From" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="To" style="width:100%">
        To (Destination)
        <input asp-for="To" class="form-control" required />
    </label>
    <span asp-validation-for="To" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="DepartureTime" style="width:100%">
        Departure Time
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
    </label>
    <span asp-validation-for="DepartureTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="ArrivalTime" style="width:100%">
        Arrival Time
        <input asp-for="ArrivalTime" class="form-control" type="datetime-local" required />
    </label>
    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Price" style="width:100%">
        Rate (Price)
        <input asp-for="Price" class="form-control" required />
    </label>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="ImagePath" style="width:100%">
        Car Image URL
        <input asp-for="ImagePath" class="form-control" />
    </label>
    <span asp-validation-for="ImagePath" class="text-danger"></span>
</div>

