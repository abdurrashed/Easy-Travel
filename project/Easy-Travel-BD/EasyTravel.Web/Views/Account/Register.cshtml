@model EasyTravel.Domain.Entites.User
@{
    ViewData["Title"] = "Register";
}
<div class="card shadow-sm" style="max-width: 500px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <form method="post">
        <!-- Name Input -->
        <div class="form-group mb-3">
            <label for="Name" style="width:100%" >
                Name
                <input asp-for="Name" id="Name" class="form-control" required aria-describedby="NameHelp" />
            </label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Email Input -->
        <div class="form-group mb-3">
            <label for="Email" style="width:100%">
                Email
                <input asp-for="Email" type="email" id="Email" class="form-control" required aria-describedby="EmailHelp" />
            </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Password Input -->
        <div class="form-group mb-3">
            <label for="Password" style="width:100%">
                Password
                <input asp-for="Password" type="password" id="Password" class="form-control" required aria-describedby="PasswordHelp" />
            </label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Phone Number Input -->
        <div class="form-group mb-3">
            <label for="PhoneNumber" style="width:100%">
                PhoneNumber
                <input asp-for="PhoneNumber" type="tel" id="PhoneNumber" class="form-control" required aria-describedby="PhoneNumberHelp" />
            </label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Profession Input (Optional) -->
        <div class="form-group mb-3">
            <label for="Profession" style="width:100%">
                Profession (Optional)
                <input asp-for="Profession" id="Profession" class="form-control" aria-describedby="ProfessionHelp" />
            </label>
            <span asp-validation-for="Profession" class="text-danger"></span>
        </div>

        <!-- Role Selection -->
        <div class="form-group mb-3">
            <label for="Role" style="width:100%">
                Role
                <select asp-for="Role" id="Role" class="form-control" required>
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </label>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>
</div>
